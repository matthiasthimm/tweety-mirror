      <executions>
        <execution>
          <id>attach-javadocs</id>
          <goals>
            <goal>jar</goal>
          </goals>
          <configuration>
            <additionalparam>-Xdoclint:none</additionalparam>
          </configuration>
        </execution>
      </executions>
        <configuration>
          <outputDirectory>../testBuild</outputDirectory>
          <finalName>${project.groupId}.${project.artifactId}-${project.version}</finalName>
        </configuration>
    </plugin>
      <plugin>
